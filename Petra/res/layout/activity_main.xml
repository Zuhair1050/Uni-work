<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="uk.ac.hud.u1166830.quiz.MainActivity" >

    <ScrollView
        android:id="@+id/textAreaScroller"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:scrollbars="vertical" >
	
        <TextView
            android:id="@+id/about_petra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_petra"
            
            android:textSize="@dimen/textSizedp"
            android:textStyle="bold" 
            
            />
		
        
        </ScrollView>

        <ImageView
            android:id="@+id/android_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha=".30"
            android:contentDescription="@string/image_text"
            android:scaleType="centerCrop"
            android:src="@drawable/petra_icon" />

        <Button
            android:id="@+id/gallery_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textAreaScroller"
            android:layout_centerHorizontal="true"
            android:text="@string/gallery" />

</RelativeLayout>